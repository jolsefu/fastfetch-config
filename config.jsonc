            "keyColor": "light_blue"
        },
        //{
            //"type": "custom",
            //"format": "\u001b[90m└────────────────────────────────────────────────────┘"
        //},
        //"break",
        //{
            //"type": "custom",
            //"format": "\u001b[90m┌──────────────────────Software──────────────────────┐"
        //},
        {
            "type": "custom",
            "format": "\u001b[33m┌────────Software",
            "color": "yellow"
        },
        {
