            "keyColor": "light_blue"
        },
        {
            "type": "packages",
            "key": "│ ├󰏖 ",
            "keyColor": "light_blue"
        },
        {
            "type": "shell",
            "key": "└ └ ",
            "keyColor": "light_blue"
        },
        //"break",
        {
            "type": "de",
            "key": " DE",
            "keyColor": "blue"
        },
        {
            "type": "lm",
            "key": "│ ├ ",
            "keyColor": "light_blue"
        },
        {
            "type": "wm",
            "key": "│ ├ ",
            "keyColor": "light_blue"
        },
        {
            "type": "wmtheme",
            "key": "│ ├󰉼 ",
            "keyColor": "light_blue"
        },
        {
            "type": "gpu",
            "key": "└ └󰍛 ",
            "format": "{3}",
            "keyColor": "light_blue"
        },
        //{
            //"type": "custom",
            //"format": "\u001b[90m└────────────────────────────────────────────────────┘"
        //},
        //"break",
        {
            "type": "custom",
            "format": "\u001b[33m┌────────────────────Uptime / Age────────────────────┐"
        },
        {
            "type": "command",
            "key": "  OS Age ",
            "keyColor": "light_blue",
            "text": "birth_install=$(stat -c %W /); current=$(date +%s); time_progression=$((current - birth_install)); days_difference=$((time_progression / 86400)); echo $days_difference days"
        },
        {
            "type": "uptime",
            "key": "  Uptime ",
            "keyColor": "light_blue"
        },
        {
            "type": "custom",
            "format": "\u001b[33m└────────────────────────────────────────────────────┘"
        },
        "break",
    ]
}
